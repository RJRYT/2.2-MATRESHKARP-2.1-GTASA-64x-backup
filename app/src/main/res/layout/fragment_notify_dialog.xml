                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/promo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@drawable/ic_notify_dialog_promo_bg"
            android:fontFamily="@font/ttnorms_medium"
            android:gravity="center"
            android:text="“ENERGY”"
            android:textColor="#ffffff"
            android:textSize="@dimen/_11sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9sdp"
            android:divider="@drawable/_7sdp_divider"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/btn_use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/notify_dialog_btn_use"
                android:fontFamily="@font/ttnorms_bold"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:text="Активировать"
                android:textColor="#ffffff"
                android:textSize="@dimen/_11sdp"
                app:autoSizeMaxTextSize="@dimen/_11sdp"
                app:autoSizeMinTextSize="@dimen/_3sdp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/btn_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/notify_dialog_btn_close"
                android:fontFamily="@font/ttnorms_bold"
                android:gravity="center"
